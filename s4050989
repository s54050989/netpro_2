    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        //getPage(1);
        //getPage(2);
        BrowserThread a = new BrowserThread("Thread 1",input.getText(),show1,threadF);
        a.start();
        BrowserThread b = new BrowserThread("Thread 2",input2.getText(),show2,textA);
        b.start();
    }                                        

    class BrowserThread extends Thread{
        String name;
        String urls;
        JEditorPane show;
        JTextArea threadF;
        URL url;
    
        BrowserThread(String name,String url,JEditorPane show,JTextArea threadF){
            this.name = name;
            this.urls = url;
            this.show = show;
            this.threadF = threadF;
            this.url = verifyUrl(urls);
        }
        private URL verifyUrl(String url) {
            URL verifiedUrl = null;
            try {
              verifiedUrl = new URL(url);
            }catch (Exception e) {
                 return null;
            }
            return verifiedUrl;
        }
        @Override
        public void run(){
            String s = name + "Start\n";
            threadF.setText(s);
            setCursor(Cursor.getPredefinedCursor(Cursor.WAIT_CURSOR));
            try {
                URLConnection conn = url.openConnection();
                Map<String, List<String>> map = conn.getHeaderFields();
                s += "Printing Response Header...\n";
                
                for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                    s += entry.getKey() +":"+entry.getValue()+"\n";
                }
                s += "\nGet Response Header By Key ...\n";
                String server = conn.getHeaderField("Server");
                if (server == null) {
                    s += "Key 'Server' is not found!";
                } else {
                    s += "Server - " + server;
                }
                s += "\n Done";
            }catch (Exception e) {
                s += "ERROR!!!!!!!";
            }
            
            threadF.setText(s);
            try{
               show.setPage(url);
            }catch(Exception e){
                
            }finally{
                setCursor(Cursor.getDefaultCursor());
                s += "\n" + name + " Stop";
                threadF.setText(s);
            }
        }
}

    public void getPage(int x){
        if(x==1){
            Runnable runnable = new Runnable() {
		public void run() {
                     String x = input.getText();
                     try{
                        URL obj1 = new URL(x);
                        URLConnection conn1 = obj1.openConnection();
                        show1.setPage(x);
                        status1.setText("Status Tab1 : "+obj1.getHost());
                     }catch(Exception e){}
		}
            };
            Thread t = new Thread(runnable);
            t.start();
            threadF.setText("Thread 1 : "+t.getState()+"\n");
        }
        else{
             Runnable runnable = new Runnable() {
		public void run() {
                     String y = input2.getText();
                      try{
                        URL obj2 = new URL(y);
                        URLConnection conn2 = obj2.openConnection();
                        show2.setPage(y);
                        status2.setText("Status Tab2 : "+obj2.getHost());
                      }catch(Exception e){}
		}
            };
            Thread y = new Thread(runnable);
            y.start();
            threadF.setText("Thread 2 : "+y.getState()+"\n");
        }
    }
    
